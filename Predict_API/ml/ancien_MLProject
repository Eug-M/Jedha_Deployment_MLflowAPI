  image: jedha/mlflow-project
  # Volume binding
  volumes: ["$(pwd):/home/app"]
  # si erreur sur le pwd (d√©pend des machines) :
  #volumes: ["cheminabsolu/home/app"] exemple : volumes: ["/home/cnoret/Jedha/Deploy/MFlow/packagetraining:/home/app"]
